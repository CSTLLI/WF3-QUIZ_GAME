{% extends 'base.html.twig' %}

{% block title %}Result{% endblock %}

{% block body %}
    <h1>Result</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Apprenant</th>
                <td>{{ result.user.name }} {{ result.user.firstname }}</td>
            </tr>
            <tr>
                <th>Exercice</th>
                <td>{{ result.exercise.title }}</td>
            </tr>
            <tr>
